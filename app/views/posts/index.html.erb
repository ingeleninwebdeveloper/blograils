<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-4">
      <h1>Post</h1>

           <div class="text-right">
  <%= link_to "Publicar Post", new_post_path, class: "btn btn-primary" %>
</div>


         <% @posts.each do |post| %>
          <tr>
            
            <h1><%= link_to post.tittle, post %></h1>
            <p><%= post.body %></p>
        <p> <%= link_to "Editar", edit_post_path(post) %></p>
        <p><%= link_to "Eliminar", post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %></p>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>