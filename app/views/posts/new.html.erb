<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Nuevo Post</h1>

 
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :tittle, class: "form-control input-lg", placeholder: "Ingresa titulo para el post" %>
        </div>
        
        <div class="form-group">
       
          <%= f.text_area :body,  class: "form-control input-lg", placeholder: "Ingresa el contenido del Post" %>
         
        </div>
        <div>
          <%= f.submit "Publicar Post
          ", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>